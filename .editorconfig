# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
insert_final_newline = true

[*.{ex.exs}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4